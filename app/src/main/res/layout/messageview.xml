<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/linearlayout_bg"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_msg_pimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/user"
                    app:riv_border_color="#FFF"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="10dp"
                    app:riv_mutate_background="true" />

                <ImageView
                    android:id="@+id/online_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/Name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:text="Gonzalo Leyendecker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/time"
                        android:textSize="10sp"
                        android:textColor="@color/themeColor"
                        android:text="10:20:00 AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <include layout="@layout/layout_typing_indicator"
                    android:id="@+id/container_group_channel_list_typing_indicator"
                    android:layout_width="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/lastMessage"
                    android:textSize="12sp"
                    android:text="Hello How are you feeling now"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/msg_count"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="#fff"
                        android:background="@drawable/circle_blue"
                        android:text="20"
                        android:maxLength="3"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>